<!DOCTYPE html>
<html>
  <head>
    <title>PostBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway:400,700' %>
  </head>

  <body>
    <div id="sidebar">
      <ul>
        <li class="category"> <%= link_to "Logo", root_path %> </li>
        <li> <%= link_to "Posts", root_path %> </li>
        <li> <%= link_to "About", about_path %> </li>
      </ul>
    </div>
  
    <div id="main_content">
      <div id="header">
        <% if current_page?(root_path)%>
          <p>Post Feed</p>
        <% elsif current_page?(about_path) %>
         <p>My Page</p>
        <% else %>
          <%= link_to "Back to Post Feed", root_path %>
        <% end %>
        <div class="buttons">
          <button class="button"> <%= link_to "Make Post", new_post_path %> </button>
          <button class="button">Log Out</button>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
